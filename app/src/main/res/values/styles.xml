<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentSquareButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TemaMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/menu_item_background</item>
        <item name="android:textColor">@color/menu_item_text</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="MenuHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/adlam</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EstiloBotonPersonalizado" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/adlam</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MySpinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>